<%- include("./../partials/header.ejs") %>

<div class="body-layout">
    <div class="main-layout">
        <%- include("./../partials/sidebar.ejs") %>
        <main class="main">
            <div class="form-container">
                <form class="form-body" method="POST" action="/project/create/posted">
                    <div class="form-input">
                        <label class="form-input-label" for="name" id="nameLabel">
                            <span>Name</span>
                            <input class="form-text-input" type="text" aria-invalid="false" id="name" name="f_name" required placeholder="Enter a project name">
                        </label>
                    </div>
                    <div class="form-input">
                        <label class="form-input-label label" for="description" id="descriptionLabel">
                            <span>Description</span>
                            <textarea class="form-input-textarea" aria-invalid="false" id="description" name="f_description" rows="5" cols="33"></textarea>
                        </label>
                    </div>
                    <div class="form-input">
                        <label class="form-input-label label" for="dueDate" id="dueDateLabel">
                            <span>Due Date</span>
                            <input class="form-text-input" type="date" aria-invalid="false" id="dueDate" name="f_due_date">
                        </label>
                    </div>
                    <button class="button" type="submit">
                        <span>Create project</span>
                    </button>
                    <a class="form-button-link" href="/projects">
                        <button class="button" type="button">
                            <span>Go Back</span>
                        </button>
                    </a>
                </form>
            </div>
        </main>
    </div>

    <%- include("./../partials/footer.ejs") %>
</div>
