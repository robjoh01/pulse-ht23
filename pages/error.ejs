                    <div class="error-panel">
                        <a class="a-button" href="<%= error_redirect %>">
                            <span>Go back</span>
                        </a>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <%- include("./../partials/footer.ejs") %>
</div>
