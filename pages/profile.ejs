<%- include("./../partials/header.ejs") %>

<main class="main">
    <div class="profile-container form-container">
        <div class="profile-root form-root">
            <div class="profile-header form-header"></div>
            <form class="form" method="POST" action="/profile/posted">
                <div class="form-input">
                    <img src="" alt="">
                    <div class="form-input">
                        <label for="account-settings-upload-image" id="account-settings-upload-image-label">Upload New Photo</label>
                        <div class="form-output">
                            <input class="form-text-input" type="file" accept="image/png, image/jpeg" aria-invalid="false" id="account-settings-upload-image" name="f_image_url" src="user.image_url" alt="Profile Image">
                        </div>
                    </div>
                    <button type="button">
                        Reset
                    </button>
                    <p>Allowed PNG or JPEG. Max size of 800K.</p>
                </div>
                <input type="text" aria-invalid="false" id="id" name="f_id" value="<%= user.employee_id %>" required hidden>
                <div class="form-input">
                    <label for="username" id="username-label">Username</label>
                    <div class="form-output">
                        <input class="form-text-input" type="text" aria-invalid="false" id="username" name="f_username" value="<%= user.username %>" readonly required>
                    </div>
                </div>
                <div class="form-input">
                    <label for="display-name" id="display-name-label">Display Name</label>
                    <div class="form-output">
                        <input class="form-text-input" type="text" aria-invalid="false" id="display-name" name="f_display_name" value="<%= user.display_name %>">
                    </div>
                </div>
                <div class="form-input">
                    <label for="email" id="email-label">Email</label>
                    <div class="form-output">
                        <input class="form-text-input" type="email" aria-invalid="false" id="email" name="f_email" value="<%= user.email_address %>">
                    </div>
                </div>
                <div class="form-input">
                    <label for="phone-number" id="phone-number-label">Phone Number</label>
                    <div class="form-output">
                        <input class="form-text-input" type="tel" aria-invalid="false" id="phone-number" name="f_phone_number" value="<%= user.phone_number %>">
                    </div>
                </div>
                <div class="form-input">
                    <button class="button form-button" type="submit">
                        Save Changes
                    </button>
                    <button class="button form-button" type="reset">
                        Reset
                    </button>
                </div>
                <div class="form-input">
                    <p>
                        <a href="/change_password">Change Password</a>
                    </p>
                    <p>
                        <a href="/delete">Delete Account</a>
                    </p>
                    <!-- <button type="button">
                        Delete Account
                    </button> -->
                </div>
            </form>
        </div>
    </div>
</main>

<%- include("./../partials/footer.ejs") %>
