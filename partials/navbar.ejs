<header class="header">
    <nav class="navbar" id="navbar">
        <% if (session.authenticated) { %>
        <div class="user-container <%= pageName === 'user' ? 'active' : '' %>">
            <a aria-label="Profile" class="user-link" href="/user/profile">
                <picture>
                    <source srcset="<%= user.image_url %>">
                    <img class="user-img" src="/img/avatar.png" alt="Profile Image" fetchPriority="high">
                </picture>
            </a>
            <div class="user-details">
                <span class="user-details-name"><%= user.name %></span>
                <% if (user.is_employee) { %>
                <span class="user-details-role">Employee</span>
                <% } else { %>
                <span class="user-details-role">Project Manager</span>
                <% } %>
            </div>
        </div>
        <% } %>
        <ul>
            <% if (session.authenticated) { %>
            <li>
                <a aria-label="Dashboard" class="nav-item <%= pageName === 'dashboard' ? 'active' : '' %>" href="/dashboard">
                    <i class='nav-item-icon bx bxs-dashboard' ></i>
                    <span class="nav-item-label">Dashboard</span>
                </a>
                <span class="primary-tooltip">Dashboard</span>
            </li>
            <li>
                <a aria-label="Calendar" class="nav-item <%= pageName === 'calendar' ? 'active' : '' %>" href="/calendar">
                    <i class='nav-item-icon bx bxs-calendar'></i>
                    <span class="nav-item-label">Calendar</span>
                </a>
                <span class="primary-tooltip">Calendar</span>
            </li>
            <li>
                <a aria-label="Logout" class="nav-item <%= pageName === 'user' ? 'active' : '' %>" href="/user/logout">
                    <i class="nav-item-icon nav-item-icon bx bx-log-out"></i>
                    <span class="nav-item-label">Logout</span>
                </a>
                <span class="primary-tooltip">Logout</span>
            </li>
            <% } else { %>
            <li>
                <a aria-label="Login" class="nav-item <%= pageName === 'user' ? 'active' : '' %>" href="/user/login">
                    <i class='nav-item-icon bx bx-log-in'></i>
                    <span class="nav-item-label">Login</span>
                </a>
                <span class="primary-tooltip">Login</span>
            </li>
            <% } %>
        </ul>
        <button aria-label="Toggle Theme Button" id="themeBtn" class="">
            <i id="themeSun" class='nav-item-icon bx bxs-sun'></i>
            <i id="themeMoon" class='nav-item-icon bx bxs-moon' ></i>
        </button>
    </nav>
</header>

    <script type="text/javascript" src="/js/navbar.js" defer></script>
